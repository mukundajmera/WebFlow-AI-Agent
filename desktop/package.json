{
  "name": "browserai-craft-desktop",
  "version": "0.1.0",
  "description": "BrowserAI Craft Desktop â€” Cross-platform Electron wrapper",
  "main": "dist/main.js",
  "author": "BrowserAI Craft Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "tsc && electron-builder",
    "build:mac": "tsc && electron-builder --mac",
    "build:win": "tsc && electron-builder --win",
    "build:linux": "tsc && electron-builder --linux"
  },
  "build": {
    "appId": "com.browserai.craft",
    "productName": "BrowserAI Craft",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "extension/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "assets/icon.png"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0"
  }
}
